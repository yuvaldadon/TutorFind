<div class='home-callout text-center container-fluid'>
    <h1>Welcome to Match</h1>
    <h3>A membership site</h3>
</div>

<div class="container home-signup-links">
    


    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
    
      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <div class="item active">
          <img src="https://images.theconversation.com/files/268439/original/file-20190409-2921-1a4uike.jpg?ixlib=rb-1.1.0&q=45&auto=format&w=1000&fit=clip" alt="Los Angeles">
        </div>
    
        <div class="item">
          <img src="https://images.theconversation.com/files/268455/original/file-20190409-2931-rzhl22.jpg?ixlib=rb-1.1.0&q=45&auto=format&w=926&fit=clip" alt="Chicago">
        </div>
    
        <div class="item">
          <img src="https://i0.wp.com/striveacademics.com/wp-content/uploads/2015/11/Male-Tutor-and-Student.png" alt="New York">
        </div>
      </div>
    
      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    
    <div class="row">
        
        
        <% if user_signed_in? %>
            <div class="col-md-6">
                <div class="well">
                    <h2 class="text-center">Your Profile</h2>
                    <% if current_user.profile %>
                        <!--<%= link_to "Edit your profile", "#", class:'btn btn-default btn-lg btn-block' %>-->
                        <p class='text-center'>Visit your personal profile page</p>
                        <%= link_to "View your profile", user_path(id: current_user.id), class:'btn btn-default btn-lg btn-block' %>
                    <% else %>
                        <p class='text-center'>Create your profile to share your information with the community</p>
                        <%= link_to "Create your profile!", new_user_profile_path(user_id: current_user.id), class:'btn btn-default btn-lg btn-block'  %>
                    <% end %>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="well">
                    <h2 class="text-center">The Community</h2>
                    <p class='text-center'>Visit the community to view other members</p>
                    <%= link_to "Visit the Community", users_path, class:'btn btn-default btn-lg btn-block' %>
                </div>
            </div>
        <% else %>
            <div class="col-md-6">
                <div class="well">
                    <h2 class="text-center">Basic Membership</h2>
                    <h4 class="text-center">Sign up for free and get basic access</h4>
                    <br/>
                    <%= link_to "Sign up with Basic", new_user_registration_path(plan: @basic_plan.id), class:'btn btn-primary btn-lg btn-block'%>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="well">
                    <h2 class="text-center">Premium Membership</h2>
                    <h4 class="text-center">Sign up for premium for 10$/month</h4>
                    <br/>
                    <%= link_to "Sign up with Premium", new_user_registration_path(plan: @pro_plan.id), class:'btn btn-success btn-lg btn-block'%>
                    
                </div>
            </div>
        <% end %>
    </div>
</div>