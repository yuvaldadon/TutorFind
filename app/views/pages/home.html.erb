<!--Home Page Body-->

<!--Headline-->
<div class='home-callout text-center container-fluid'>
    <div class="row">
        <div class='col-md-8 col-md-offset-2 home-headline'>
            <h1>Welcome to TutorFind</h1>
            <h3>Find a Tutor that suits you</h3>
        </div>
    </div>
</div> 


<!--Main Button container-->
<div class="container home-signup-links">
    <div class="row">

        <!--Display navigation buttons if user logged in-->
        <% if user_signed_in? %>
        
            <!--Left Profile Button-->
            <div class="col-md-6">
                <div class="well">
                    <h2 class="text-center">Your Profile</h2>
                    <% if current_user.profile %>
                        <!--<%= link_to "Edit your profile", "#", class:'btn btn-primary btn-lg btn-block' %>-->
                        <p class='text-center'>Visit your personal profile page</p>
                        <%= link_to "View your profile", user_path(id: current_user.id), class:'btn btn-primary btn-lg btn-block' %>
                    <% else %>
                        <p class='text-center'>Create your profile to share your information with the community</p>
                        <%= link_to "Create your profile!", new_user_profile_path(user_id: current_user.id), class:'btn btn-primary btn-lg btn-block'  %>
                    <% end %>
                </div>
            </div>
            
            <!--Right community button-->
            <div class="col-md-6">
                <div class="well">
                    <h2 class="text-center">The Community</h2>
                    <p class='text-center'>Visit the community to view other members</p>
                    <%= link_to "Visit the Community", users_path, class:'btn btn-primary btn-lg btn-block' %>
                </div>
            </div>
            
        <!--Display membership types if not logged in-->
        <% else %>
        
            <!--Left Basic membership Button-->
            <div class="col-md-6">
                <div class="well">
                    <h2 class="text-center">Basic Membership</h2>
                    <h4 class="text-center">Sign up for free and get basic access</h4>
                    <br/>
                    <%= link_to "Sign up with Basic", new_user_registration_path(plan: @basic_plan.id), class:'btn btn-primary btn-lg btn-block'%>
                </div>
            </div>
            
            <!--Right Premium membership Button-->
            <div class="col-md-6">
                <div class="well">
                    <h2 class="text-center">Premium Membership</h2>
                    <h4 class="text-center">Sign up for premium for 10$/month</h4>
                    <br/>
                    <%= link_to "Sign up with Premium", new_user_registration_path(plan: @pro_plan.id), class:'btn btn-success btn-lg btn-block'%>
                    
                </div>
            </div>

        <% end %>
    </div>
    
    <!--What We Offer Section-->
    <div class="container-fluid text-center offer-section">
      <h2>How Does It Work ?</h2>
      <br>
      <div class="row">
        <div class="col-sm-4">
          <span class="glyphicon glyphicon-pencil logo-small"></span>
          <h4>Sign Up</h4>
        </div>
        <div class="col-sm-4">
          <span class="glyphicon glyphicon-user logo-small"></span>
          <h4>Create your profile</h4>
        </div>
        <div class="col-sm-4">
          <span class="glyphicon glyphicon-thumbs-up logo-small"></span>
          <h4>Explore the Community</h4>
        </div>
      </div>
    </div>
    
</div>