<div class='home-callout text-center container-fluid'>
    
    <!--Home Headline-->
    <div class="row">
        <div class='col-md-8 col-md-offset-2 home-headline'>
            <h1>Welcome to TutorFind</h1>
            <h3>Find a Tutor that suits you</h3>
        </div>
    </div>

    <!--Home Buttons-->
    <div class="container home-signup-links">
        <div class="row">
            
            <!--Signed in: View profile or community-->
            <% if user_signed_in? %>
                <div class="col-md-6">
                    <div class="well">
                        <h2 class="text-center">Your Profile</h2>
                        <% if current_user.profile %>
                            <h4 class="text-center">Visit your personal profile page</h4>
                            <%= link_to "View your profile", user_path(id: current_user.id), class:'btn btn-primary btn-lg btn-block' %>
                        <% else %>
                            <h4 class="text-center">Create your profile to share your information with the community</h4>
                            <%= link_to "Create your profile!", new_user_profile_path(user_id: current_user.id), class:'btn btn-primary btn-lg btn-block'  %>
                        <% end %>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="well">
                        <h2 class="text-center">The Community</h2>
                        <p class='text-center'>Visit the community to view other members</p>
                        <%= link_to "Visit the Community", users_path, class:'btn btn-primary btn-lg btn-block' %>
                    </div>
                </div>
                
            <!--New user sign up buttons-->
            <% else %>
                <div class="col-md-6">
                    <div class="well">
                        <h2 class="text-center">Basic Membership</h2>
                        <h4 class="text-center">Sign up for free and get basic access</h4>
                        <br/>
                        <%= link_to "Sign up with Basic Access", new_user_registration_path(plan: @basic_plan.id), class:'btn btn-primary btn-lg btn-block'%>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="well">
                        <h2 class="text-center">Premium Membership</h2>
                        <h4 class="text-center">Sign up for premium for 10$/month for exclusive access</h4>
                        <br/>
                        <%= link_to "Sign up with Premium", new_user_registration_path(plan: @pro_plan.id), class:'btn btn-success btn-lg btn-block'%>
                        
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>

<div class="bg"></div>