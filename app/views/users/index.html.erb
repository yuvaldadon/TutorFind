<!--User List body-->
<div class='container users-index-container'>
    <div class="row">
        
        <!--Students List-->
        <div class="col-md-6">
            <ul class="list-unstyled">
                <!--Loop over students-->
                <% @users.each do |user| %>
                    <% if user.profile %>
                        <% if user.profile.job_title=="Student" %>
                            <li>
                                <!--background color if premium-->
                                <% if user.plan_id == 2 %>
                                    <div class="index-page-well well row orange-bg">
                                <% else %>
                                    <div class="index-page-well well row white-bg">
                                <% end %>
                                    <!--avatar-->
                                    <div class="col-sm-4 text-center">
                                        <% if user.profile.avatar %>
                                            <%= link_to user do %>
                                                <%= image_tag user.profile.avatar.url, class: 'user-index-avatar' %>
                                            <% end %>
                                        <% end %>
                                    </div>
                                    <!--Profile attributes-->
                                    <div>
                                        <!--name-->
                                        <%= link_to user do %>
                                            <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                                        <% end %>
                                        <!--job title-->
                                        <i class='fa fa-graduation-cap'></i>
                                        <%= user.profile.job_title %>
                                        <!--premium tag-->
                                        <p>
                                            <% if user.plan_id == 2 %>
                                                <span class="label label-danger">Premium</span>
                                            <% end %>
                                        </p>
                                        <!--description-->
                                        <%= user.profile.description.first(40) %>
                                    </div>
                                </div>
                            </li>
                        <% end %>
                    <% end %>
                <% end %>
            </ul>
        </div>
        
        <!--Tutors List-->
        <div class="col-md-6">
            <ul class="list-unstyled">
                <% @users.each do |user| %>
                    <% if user.profile %>
                        <% if user.profile.job_title=="Tutor" %>
