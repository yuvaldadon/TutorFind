                                                <%= image_tag user.profile.avatar.url, class: 'user-index-avatar' %>
                                            <% end %>
                                        <% end %>
                                    </div>
                                    <!--Profile attributes-->
                                    <div>
                                        <!--name-->
                                        <%= link_to user do %>
                                            <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                                        <% end %>
                                        <!--job title-->
                                        <i class='fa fa-user'></i>
                                        <%= user.profile.job_title %>
                                        <!--premium tag-->
                                        <p>
                                            <% if user.plan_id == 2 %>
                                                <span class="label label-danger">Premium</span>
                                            <% end %>
                                        </p>
                                        <!--description-->
                                        <%= user.profile.description.first(40) %>
                                    </div>
                                </div>
                            </li>
                        <% end %>
                    <% end %>
                <% end %>
            </ul>
        </div>
    </div>
</div>